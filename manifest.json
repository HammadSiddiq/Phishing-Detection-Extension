{
  "manifest_version": 3,
  "name": "Phishing Detector",
  "version": "1.0",
  "description": "Real-time phishing detection for suspicious URLs and websites",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons8-download-16.png",
      "48": "icons/Papirus-Team-Papirus-Apps-Fusion-icon.48.png",
      "128": "icons/Papirus-Team-Papirus-Apps-Subsurface-icon.128.png"
    }
  },
  "icons": {
    "16": "icons/icons8-download-16.png",
    "48": "icons/Papirus-Team-Papirus-Apps-Fusion-icon.48.png",
    "128": "icons/Papirus-Team-Papirus-Apps-Subsurface-icon.128.png"
  }
}